<div class="wrapper">
    <!-- Sidebar Holder -->
    <nav id="sidebar">
        <div class="sidebar-header">
            <%= image_tag("logo/logo2.png", class: "img-responsive", id: "navbar-logo", size: "180x135") %>  
        </div>

        <ul class="list-unstyled components">
            <p class="dashboard"></p>
            <li class="nav-item inactive">
              <%= link_to '<i class="fa fa-home"></i> Puntos de Venta'.html_safe, points_path, class: 'item-list'%>
            </li>
            <li class="nav-item active">
              <%= link_to '<i class="fa fa-list"></i> Categoría de Equipos'.html_safe, category_equipments_path, class: 'item-list'%>
            </li>
            <li class="nav-item active">
              <%= link_to '<i class="fa fa-external-link"></i> Salidas de Bodega'.html_safe , item_outputs_path, class: 'item-list'%>
            </li>
            
        </ul>
    </nav>

    <!-- Page Content Holder -->
    <div id="content">

      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">

          <button type="button" id="sidebarCollapse" class="navbar-btn">
              <span></span>
              <span></span>
              <span></span>
          </button>
          <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <i class="fa fa-align-justify"></i>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="nav navbar-nav ml-auto">
            <% if current_user%>
              <li class="nav-item active">
                <%= current_user.email%>
              </li>
              <li class="nav-item active">
                <%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete, class: "btn btn-danger"%>
              </li>
            <% else %>
              <li class="nav-item active">
                  <%= link_to "Iniciar Sesión", new_user_session_path, class: "btn btn-success"%>
              </li>    
            <% end %>    
            </ul>
          </div>
        </div>
      </nav>
      <div class="container-all">
        <h1>Puntos de Venta</h1>
        <div class="header-container">
      
            <%= link_to 'Descargar Excel', new_point_path, class:"btn btn-success"%>
            <%= link_to 'Nuevo Punto', new_point_path, :remote => true, 'data-toggle' =>  "modal", 'data-target' => 'point-modal', class: 'btn btn-info'%>
 
        </div>

        <div class="table-responsive">
          <table class="table table-md">
            <thead>
              <tr>
                <th>CO</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>VPN</th>
                <th>Anydesk</th>
                <th>ISP</th>
                <th colspan="3"></th>
              </tr>
            </thead>
          
            <tbody>
              <% @points.each do |point| %>
                <tr>
                  <td><%= point.co %></td>
                  <td><%= point.name %></td>
                  <td><%= point.address %></td>
                  <td><%= point.vpn %></td>
                  <td><%= point.anydesk %></td>
                  <td><%= point.isp %></td>
                  <% if current_user %>
                    <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, point, class:"btn btn-outline-primary" %></td>
                    <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_point_path(point), class:"btn btn-outline-info"%></td>
            
                    <td><%= link_to '<i class="fa fa-trash"></i>'.html_safe, point, class:"btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>  
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @points %>
          <div id="point-modal" style="display:none;"></div>
        </div>
      </div>  
    </div> 
  </div>  
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
            $(this).toggleClass('active');
        });
    });
</script>