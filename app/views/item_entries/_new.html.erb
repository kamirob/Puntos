<div id="myModal" class="modal fade" tabindex="-1" style="background-color: rgba(0, 0, 0, 0.9);" data-backdrop="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title-centered">Nueva Entrada</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <%= form_for @item_entry, remote: true do |f| %>
                    <% if @item_entry.errors.any? %>
                        <div id="error_explanation">
                            <h2><%= pluralize(item_entry.errors.count, "error") %> prohibited this item_entry from being saved:</h2>
                            <ul>
                                <% item_entry.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>


                    <div class="field">
                    <%= f.collection_select(:supplier_id, Supplier.all, :id, :name, prompt: "Seleccione un proveedor") %>
                    </div> 

                    <div class="field">
                        <%= f.label :invoice_number %>
                        <%= f.number_field :invoice_number %>
                    </div>

                    <div class="field">
                        <%= f.collection_select(:equipment_id, Equipment.all, :id, :name, prompt: "Seleccione un item") %>
                    </div> 

                    <div class="field">
                        <%= f.label :quantity %>
                        <%= f.number_field :quantity %>
                    </div>

                    <div class="field">
                        <%= f.label :unit_value %>
                        <%= f.text_field :unit_value %>
                    </div>

                    <div class="field">
                        <%= f.label :total_value %>
                        <%= f.text_field :total_value %>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <div class="actions">
                            <%= f.submit 'Crear', class:'btn btn-success'%>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>    
    </div>
</div>    


